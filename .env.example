# Copy to .env and edit
FLASK_APP=manage.py
FLASK_ENV=development

# Secret
SECRET_KEY=change_this_to_something_secret

# Database (Postgres)
DATABASE_URL=postgresql://postgres:postgres@db:5432/cms

# Media provider: 'local' for dev, 'spaces' for DigitalOcean Spaces (S3)
MEDIA_PROVIDER=local

# DigitalOcean Spaces (if using Spaces in production)
DO_SPACE_REGION=
DO_SPACE_ENDPOINT=  # e.g. https://nyc3.digitaloceanspaces.com
DO_SPACE_BUCKET=
DO_SPACE_KEY=
DO_SPACE_SECRET=
DO_SPACE_BASE_URL=  # e.g. https://your-bucket.nyc3.cdn.digitaloceanspaces.com

# Optional: Admin user
ADMIN_EMAIL=admin@sggsiet.ac.in
ADMIN_PASSWORD=strong_admin_password
